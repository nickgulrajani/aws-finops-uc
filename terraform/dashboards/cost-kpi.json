{
  "title": "FinOps KPIs",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "tags": ["finops", "cost"],
  "panels": [
    {
      "type": "timeseries",
      "title": "Estimated Spend (Monthly)",
      "targets": [
        {
          "refId": "A",
          "datasource": "CostExplorer",
          "query": "EstimatedCharges{Granularity='MONTHLY'}"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Tag Coverage (Required Tags Present)",
      "targets": [
        {
          "refId": "B",
          "datasource": "Custom",
          "query": "tag_coverage_percent"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Anomalies (Last 7 days)",
      "targets": [
        {
          "refId": "C",
          "datasource": "CostExplorer",
          "query": "Anomalies{LookBack='7d'}"
        }
      ]
    }
  ]
}

